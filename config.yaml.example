bot:
  token: "你的_TELEGRAM_BOT_TOKEN"
  poller_timeout: 10s
  log_level: "info"

  # QQ 配置 (可选)
  qq_app_id: ""
  qq_secret: ""

# 代理配置
proxy:
  url: "http://127.0.0.1:7890"  # 代理地址
  telegram_use_proxy: true       # Telegram 是否使用代理，默认 false
  qq_use_proxy: false            # QQ 是否使用代理，默认 false (QQ 一定不走代理)

ai:
  provider: "openai"
  base_url: "https://api.openai.com/v1"
  api_key: "你的_API_KEY"
  model: "gpt-4o"
  default_prompt: "你是一个得力的助手。"

# 平台专属提示词（只针对最终回复，不影响工具调用过程）
platform_prompts:
  qq: "不要在回复中包含任何 URL 链接。如果需要引用网址，请用文字描述代替。"
  telegram: ""  # Telegram 无特殊限制

# MCP 服务器配置
mcpServers:
  # HTTP/SSE 类型示例
  hotnews:
    type: "sse"
    url: "https://dashscope.aliyuncs.com/api/v1/mcps/hotnews/sse"
    headers:
      Authorization: "Bearer ${DASHSCOPE_API_KEY}"  # 使用环境变量
    use_proxy: true  # 是否使用代理，默认 false，设为 true 则使用上面配置的代理地址

  # Stdio 类型示例（通过命令启动）
  bingcn:
    type: "stdio"      # 或者省略 type，有 command 字段会自动识别为 stdio
    command: "npx"     # 执行的命令
    args:              # 命令参数
      - "bing-cn-mcp"
    use_proxy: false   # stdio 类型也可以设置是否使用代理（控制子进程的网络请求）

  # Stdio 类型示例（带环境变量和代理）
  news:
    command: "npx"
    args:
      - "news-mcp-server"
    use_proxy: true    # 子进程的网络请求会使用代理
    env:               # 环境变量（可选）
      NEWS_API_KEY: "your_api_key_here"
      NEWS_BASE_URL: "https://newsdata.io"

# 定时推送配置
push:
  enabled: true
  time: "09:00" # 每天 09:00 推送
  targets:
    - "Telegram:123456789"
    - "QQ:Group:123456" # QQ:Group:群号 或 QQ:User:OpenID
  prompt: "查询今天的新闻热点并总结"

allowed_users:
  - "123456789"

allowed_telegram:
  - "123456789"
allowed_qq:
  - "OPENID_FROM_QQ"

# 女朋友定制配置
# 格式: "平台:用户ID"
girlfriend:
  "QQ:ABC123DEF456":  # 替换为女朋友的 QQ OpenID
    name: "宝贝"
    prompt: |
      你是一个温柔体贴的男朋友助手。
      对话时要温暖、关心、体贴，适当使用一些可爱的语气词。
      记住对方叫宝贝，要表达爱意和关心。
      回复要简洁温馨，不要太正式。
  "Telegram:987654321":  # 也可以配置 Telegram 用户
    name: "亲爱的"
    prompt: "你是一个贴心的助手，回复要温暖友善。"